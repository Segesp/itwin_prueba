# iTwin.js Configuration (cuando se integre)
# ITWIN_CLIENT_ID=your_client_id_here
# ITWIN_REDIRECT_URI=http://localhost:3000/signin-callback
# ITWIN_SCOPE=imodels:read
# ITWIN_AUTHORITY=https://ims.bentley.com

# Application Configuration
REACT_APP_NAME=Gemelo Digital Urbano Buenos Aires
REACT_APP_VERSION=1.0.0
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_WEBSOCKET_URL=ws://localhost:3001

# Buenos Aires Specific Configuration
REACT_APP_CITY_NAME=Buenos Aires
REACT_APP_CITY_LAT=-34.6118
REACT_APP_CITY_LNG=-58.3960
REACT_APP_CITY_ZOOM=11

# Map Configuration
REACT_APP_MAPBOX_TOKEN=your_mapbox_token_here
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Analytics and Monitoring
REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id_here
REACT_APP_SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
REACT_APP_ENABLE_3D_VIEWER=true
REACT_APP_ENABLE_REAL_TIME_DATA=true
REACT_APP_ENABLE_SIMULATIONS=true
REACT_APP_ENABLE_CITIZEN_REPORTS=true
REACT_APP_ENABLE_ADMIN_DASHBOARD=true

# Performance Settings
REACT_APP_MAX_CONCURRENT_REQUESTS=10
REACT_APP_DATA_REFRESH_INTERVAL=30000
REACT_APP_ENABLE_OFFLINE_MODE=true

# Security
REACT_APP_ENABLE_HTTPS=true
REACT_APP_SESSION_TIMEOUT=3600000

# Development
GENERATE_SOURCEMAP=true
BROWSER=none
PORT=3000