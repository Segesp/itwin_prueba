# iTwin.js Configuration - REQUIRED for real iModel editing
IMJS_AUTH_CLIENT_CLIENT_ID=your_client_id_here
IMJS_AUTH_CLIENT_REDIRECT_URI=http://localhost:3000/signin-callback
IMJS_AUTH_CLIENT_LOGOUT_URI=http://localhost:3000
IMJS_AUTH_CLIENT_SCOPE=imodels:read imodels:modify itwin-platform
IMJS_AUTH_AUTHORITY=https://ims.bentley.com

# iTwin Platform IDs (replace with actual values)
IMJS_ITWIN_ID=your_itwin_id_here
IMJS_IMODEL_ID=your_imodel_id_here

# iTwin Platform API Configuration - for Changed Elements API
ITWIN_API_BASE=https://api.bentley.com
ITWIN_ACCESS_TOKEN=your_access_token_here

# Backend Services Configuration
IMODEL_LOCAL_PATH=./data/sample.bim
PORT=3001
SCENARIOS_PORT=3002

# Cesium 3D Tiles Context Integration
REACT_APP_CESIUM_ACCESS_TOKEN=your_cesium_ion_token_here
CESIUM_ACCESS_TOKEN=your_cesium_ion_token_here
REACT_APP_ENABLE_WORLD_TERRAIN=true
REACT_APP_ENABLE_OSM_BUILDINGS=true
REACT_APP_MAX_TERRAIN_ZOOM=18

# Application Configuration
REACT_APP_NAME=Gemelo Digital Urbano - Chancay Lima
REACT_APP_VERSION=1.0.0
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_WEBSOCKET_URL=ws://localhost:3001

# Chancay (Lima) Specific Configuration - UTM 18S Ready
REACT_APP_CITY_NAME=Chancay
REACT_APP_CITY_LAT=-11.57
REACT_APP_CITY_LNG=-77.27
REACT_APP_CITY_ZOOM=13
REACT_APP_CITY_CRS=EPSG:32718
REACT_APP_CITY_CRS_NAME=WGS84/UTM 18S

# Map Configuration
REACT_APP_MAPBOX_TOKEN=your_mapbox_token_here
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Analytics and Monitoring
REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id_here
REACT_APP_SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
REACT_APP_ENABLE_3D_VIEWER=true
REACT_APP_ENABLE_REAL_TIME_DATA=true
REACT_APP_ENABLE_SIMULATIONS=true
REACT_APP_ENABLE_CITIZEN_REPORTS=true
REACT_APP_ENABLE_ADMIN_DASHBOARD=true
REACT_APP_ENABLE_ITWIN_VIEWER=true
REACT_APP_ENABLE_RULES_ENGINE=true
REACT_APP_ENABLE_SCENARIOS=true
# CRITICAL: Set to false in production to disable simulation fallback
REACT_APP_ENABLE_SIMULATION_FALLBACK=true

# Performance Settings
REACT_APP_MAX_CONCURRENT_REQUESTS=10
REACT_APP_DATA_REFRESH_INTERVAL=30000
REACT_APP_ENABLE_OFFLINE_MODE=true

# Security
REACT_APP_ENABLE_HTTPS=true
REACT_APP_SESSION_TIMEOUT=3600000

# Development
GENERATE_SOURCEMAP=true
BROWSER=none
PORT=3000