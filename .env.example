# --- Frontend Environment Configuration ---
# NOTA: No colocar secretos en el frontend. Estas variables se exponen en el build.

# iTwin.js Configuration - REQUIRED for real iTwin integration
IMJS_AUTH_CLIENT_CLIENT_ID=spa-uuid-placeholder-dev
IMJS_ITWIN_ID=itwin-uuid-placeholder-dev
IMJS_IMODEL_ID=imodel-uuid-placeholder-dev
# Local dev uses http, production must use https
IMJS_AUTH_CLIENT_REDIRECT_URI=http://localhost:3000/signin-callback
IMJS_AUTH_CLIENT_LOGOUT_URI=http://localhost:3000
IMJS_AUTH_CLIENT_SCOPE=imodels:read imodels:modify itwin-platform
IMJS_AUTH_AUTHORITY=https://ims.bentley.com

# iTwin Platform API Configuration - for Changed Elements API v2
ITWIN_API_BASE=https://api.bentley.com

# Application Configuration
REACT_APP_NAME=Gemelo Digital Urbano - Chancay
REACT_APP_VERSION=1.0.0
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_WEBSOCKET_URL=ws://localhost:3001

# Chancay (Lima) Configuration - CRS UTM 18S (EPSG:32718)
REACT_APP_CITY_NAME=Chancay
REACT_APP_CITY_LAT=-11.57
REACT_APP_CITY_LNG=-77.27
REACT_APP_CITY_ZOOM=13
REACT_APP_CITY_CRS=EPSG:32718
REACT_APP_CITY_CRS_NAME=WGS84/UTM 18S

# Feature Flags
REACT_APP_ENABLE_3D_VIEWER=true
REACT_APP_ENABLE_ITWIN_VIEWER=true
REACT_APP_ENABLE_RULES_ENGINE=true
REACT_APP_ENABLE_SCENARIOS=true
REACT_APP_ENABLE_REAL_TIME_DATA=true
REACT_APP_ENABLE_SIMULATION_FALLBACK=true

# Cesium 3D Tiles Integration
REACT_APP_CESIUM_ACCESS_TOKEN=your_cesium_ion_token_here
REACT_APP_ENABLE_WORLD_TERRAIN=true
REACT_APP_ENABLE_OSM_BUILDINGS=true
REACT_APP_MAX_TERRAIN_ZOOM=18

# External Services (optional)
REACT_APP_MAPBOX_TOKEN=
REACT_APP_GOOGLE_MAPS_API_KEY=

# Performance Settings
REACT_APP_MAX_CONCURRENT_REQUESTS=10
REACT_APP_DATA_REFRESH_INTERVAL=30000

# Security
REACT_APP_ENABLE_HTTPS=false
REACT_APP_SESSION_TIMEOUT=3600000

# Analytics and Monitoring (optional)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# Development
GENERATE_SOURCEMAP=true
BROWSER=none
PORT=3000