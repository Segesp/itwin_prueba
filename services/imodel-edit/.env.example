# --- Backend iModel Edit Service (.env) ---

# Service Configuration
PORT=3001
LOG_LEVEL=info

# iTwin Platform Configuration (v5.x)
IMJS_ITWIN_ID=itwin-uuid-placeholder-dev
IMJS_IMODEL_ID=imodel-uuid-placeholder-dev

# OAuth/OIDC Configuration (for service-to-service auth)
IMJS_OIDC_AUTHORITY=https://ims.bentley.com
IMJS_OIDC_CLIENT_ID=service-client-id-placeholder
IMJS_OIDC_CLIENT_SECRET=service-client-secret-placeholder
IMJS_OIDC_SCOPES=imodels:read imodels:modify itwin-platform

# Local iModel Configuration (for development/testing)
IMODEL_LOCAL_PATH=./data/sample.bim

# iTwin Platform API 
ITWIN_API_BASE=https://api.bentley.com

# Database Configuration (if using local persistence)
DATABASE_URL=sqlite:./data/imodel-edit.db

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
